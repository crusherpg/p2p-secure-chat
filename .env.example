# P2P Secure Chat Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGO_URI=mongodb://localhost:27017/p2p_chat

# Security Configuration
JWT_SECRET=your-super-secure-512-bit-jwt-secret-key-here-change-this-in-production
FILE_UPLOAD_DIR=./uploads

# TOTP Configuration
TOTP_ISSUER=P2P Secure Chat

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Production SSL (Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem